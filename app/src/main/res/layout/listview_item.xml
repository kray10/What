<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="3dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/gamepic"
        android:layout_width="140dp"
        android:layout_height="133dp"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="6dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/stat_sys_warning" />

    <TextView
        android:id="@+id/itemTitle"
        android:layout_width="177dp"
        android:layout_height="27dp"
        android:layout_marginLeft="0dp"
        android:layout_marginRight="8dp"
        android:text="Titlebar"
        android:textSize="25dp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/gamepic"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="7dp" />

    <TextView
        android:id="@+id/atenddessnummin"
        android:layout_width="85dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="MinmM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintLeft_toRightOf="@+id/gamepic"
        app:layout_constraintRight_toLeftOf="@+id/atenddessnummax" />

    <TextView
        android:id="@+id/atenddessnummax"
        android:layout_width="79dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="0dp"
        android:layout_marginRight="0dp"
        android:text="MaxmM"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/year"
        android:layout_width="67dp"
        android:layout_height="27dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="8dp"
        android:text="Year"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/atenddessnummin"
        app:layout_constraintLeft_toRightOf="@+id/gamepic"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.472" />

    <TextView
        android:id="@+id/time"
        android:layout_width="116dp"
        android:layout_height="25dp"
        android:layout_marginLeft="43dp"
        android:layout_marginRight="8dp"
        android:text="Time needed at least"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintLeft_toRightOf="@+id/year"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteY="54dp" />
</android.support.constraint.ConstraintLayout>