<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.j_hawk.whattoplay.MainActivity">

    <Button
        android:id="@+id/removeGame"
        android:layout_width="169dp"
        android:layout_height="53dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="102dp"
        android:layout_marginTop="122dp"
        android:onClick="goToRemoveGameActivity"
        android:text="Remove Game"
        app:layout_constraintBottom_toTopOf="@+id/onlineBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.887" />

    <Button
        android:id="@+id/button"
        android:layout_width="169dp"
        android:layout_height="53dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="98dp"
        android:layout_marginTop="122dp"
        android:text="Find Game"
        app:layout_constraintBottom_toTopOf="@+id/onlineBtn"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/onlineBtn"
        android:layout_width="167dp"
        android:layout_height="58dp"
        android:layout_marginBottom="190dp"
        android:layout_marginRight="-9dp"
        android:text="Add To Collection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="@+id/removeGame" />

</android.support.constraint.ConstraintLayout>
